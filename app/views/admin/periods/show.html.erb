<% page_title t '.title', :default => @model.model_name.human %>

<div class="row action-pane">
  <div class="col-md-12">
    <%= links_for(@model, :admin, [:pre, :view_all]) %>
    <div class="pull-right"><%= links_for(@item, :admin, [:edit, :destroy]) %></div>
  </div>
</div>
<div class="row"><hr/></div>
<div class="row">
  <div class="col-md-12">
  <%
    fields = [:title, :current_type, :description, :period_start, :period_end]
    fields.each { |f|
  %>
      <p><strong><%= @model.human_attribute_name(f) %>: </strong><%= @item.send(f) %></p>
  <% } %>
  </div>
</div>
<% if @related_datasets.present? %>
  <div class="row">
    <div class="col-md-12">
      <hr/>
      <p><strong><%= "#{I18n.t("admin.periods.related_datasets")}:" %></strong></p>
      <table class="table table-bordered table-hover table-responsive datatable">
        <thead>
          <tr>
            <th><%= Dataset.human_attribute_name(:party_id) %></th>
          </tr>
        </thead>
        <tbody>
          <% @related_datasets.each do |item| %>
            <tr>
              <td><%= item.party_name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
