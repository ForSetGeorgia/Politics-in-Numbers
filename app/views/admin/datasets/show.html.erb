<%- m = Donor %>
<%= puts m.model_name.human(:count => 2) %>
<%- title t '.title', :default => m.model_name.human(:count => 2) %>
<div class="row action-pane">
  <div class="col-md-12">
    <%= links_for(@model, :admin, [:pre, :view_all]) %>
    <div class="pull-right"></div>
  </div>
</div>
<div class="row"><hr/></div>

<div class="row">
  <ul class="nav nav-tabs"  role="tablist">
    <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Category</a></li>
    <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Detail</a></li>
  </ul>
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="home">
      <table class="table table-bordered table-hover table-responsive datatable">
        <thead>
          <tr>
            <th><%= m.human_attribute_name(:category_id) %></th>
            <th><%= m.human_attribute_name(:value) %></th>
          </tr>
        </thead>
        <tbody>
          <% @item.category_datas.each do |r| %>
            <tr>
              <td><%= r.category_name %></td>
              <td class="text-right"><%= r.value %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div role="tabpanel" class="tab-pane" id="profile">
      <table class="table table-bordered table-hover table-responsive datatable">
        <thead>
          <tr>
            <th><%= m.human_attribute_name(:detail_id) %></th>
            <th><%= m.human_attribute_name(:table) %></th>
          </tr>
        </thead>
        <tbody>
          <% @item.detail_datas.each do |r| %>
            <tr>
              <td><%= r.detail_name %></td>
              <td class="text-right"><%= r.table %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
