<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <%= render partial: 'application/head', locals: { is_admin: true } %>
  <body>
    <%#= render partial: 'application/loading_indicator' %>
    <%= render partial: 'application/navbar_header' %>
    <%= render partial: 'application/main' %>
    <%= render partial: 'application/footer' %>

    <% if Rails.env.production? %>
      <%= render partial: 'application/google_analytics' %>
    <% end %>
    <script type="text/javascript">
      I18n = {
        defaultLocale: "<%= I18n.default_locale %>",
        locale: "<%= I18n.locale %>",
        available_locales: "<%= I18n.available_locales.map{|x| x.to_s}.join(',') %>".split(',')
      }
    </script>

    <%= javascript_include_tag "admin" %>
  </body>

</html>
