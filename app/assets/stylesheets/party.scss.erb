#party {
  .switch {
    background-color:#F5F7F5;
    width:100%;
    padding:60px 0 28px;
    margin:0px auto;
    > div {
      display:table-cell;
      vertical-align:top;
    }

    .sep {
      height:100%;
      border-left:1px dashed #a9afa8;
    }
    .donation {
      width:50%;
      text-align:right;
      padding:8px 26px 8px 0;
      .donation-toggle {
        font: 16px firasans_sb;
        color:#DDCD37;
        background-color:transparent;
        padding:0 11px;
        border:3px solid #DDCD37;
        height:56px;
        min-width:111px;
        transition-duration: 0.3s;
        transition-property: color, background-color;
        position: relative;
        top: -1px;
        left: -1px;
        &.active, &:hover{
          background-color: #DDCD37;
          color:#3E443D;
          cursor:pointer;
        }
      }
      &.active {
        .donation-toggle {
          background-color: #DDCD37;
          color:#3E443D;
        }
      }
    }

    .finance {
      width:50%;
      text-align:left;
      padding:8px 0 8px 26px;
      .finance-toggle {
        float:left;
        font: 16px firasans_sb;
        color:#F78E69;
        text-align:left;
        background-color:transparent;
        padding:0 11px;
        border:3px solid #F78E69;
        height:56px;
        min-width:111px;
        transition-duration: 0.3s;
        transition-property: color, background-color;
        vertical-align:top;
        &:hover {
          background-color: #F78E69;
          color:#fff;
          cursor:pointer;
        }
      }
      &.active {
        .finance-toggle {
          background-color: #F78E69;
          color:#fff;
          // position: relative;
          // top: -1px;
          // left: -21px;
        }
      }

    }
    &[data-type='donation'] {
      // .donation {
      //   width:100%;
      //   text-align:center;
      // }
      // .finance {
      //   display:none;
      // }
      // .sep {
      //   display:none;
      // }
      // .forward {
      //   display:table-cell;
      //   padding: 7px 0 9px;
      // }
    }
    &.in-depth[data-type='finance'] {
      .donation {
        display:none;
      }
      .finance {
        width:100%;
        #finance_category {
          display:inline;
          margin-left: -21px;
        }
        .finance-container {
          border:1px dashed #ced1cd;
          border-right:0;
        }
      }
      .sep {
        display:none;
      }
      .back {
        display:table-cell;
        padding: 7px 0 6px;
      }
    }
  }
  .content {
    display: flex;
    flex-direction:row;

    .filter {
      position:relative;
      display:inline-block;
      width:100%;
      z-index:101;
      .filter-toggle {
        font:14px firasans_r;
        color:#88D877;
        padding:15px 24px 12px 24px;
        border-bottom:1px solid #D7DDD4;
        cursor:pointer;
        white-space: nowrap;
      }
      .filter-header {
        display:block;
        padding:15px 0 12px;
        border-bottom:1px solid #D7DDD4;
        label {
          display:inline-block;
          font:14px firasans_r;
          color:#88D877;
          padding:0 10px;
        }
        .close {
          float: right;
          vertical-align: middle;
          background:transparent url("<%= asset_path('explore/close.svg') %>") no-repeat center;
          width:20px;
          height:20px;
          position: relative;
          top: -3px;
          cursor:pointer;
        }
      }
      .filter-footer {
        .reset {
          display:block;
          font:14px firasans_b;
          color:#5D675B;
          background-color:#fff;
          border:1px solid #C5CEC2;
          padding:8px 18px;
          margin: 0px auto;
        }
        .explore-button {
          display:block;
          font:14px firasans_b;
          color:#fff;
          background-color:#F78E69;
          padding:8px 18px;
          border:0;
          margin:12px auto 0;
          i.explore {
            display:inline-block;
            background:transparent url("<%= asset_path('explore/compare.svg') %>") no-repeat center;
            width:20px;
            height:20px;
            vertical-align: middle;
            margin-right: 10px;
          }
        }
      }
      .pane {
        display:none;
        background-color:#F5F7F5;
        position:absolute;
        top: 0px;
        width:200px;
        min-width:200px;
        z-index:55;
        padding:0px 14px 12px;
        overflow-y:auto;
        &::-webkit-scrollbar-track {
          background-color: #F5F7F5;
        }
        &::-webkit-scrollbar {
          height: 8px;
          width:8px;
        }
        &::-webkit-scrollbar-thumb {
          background-color:#848484;
          border: 2px solid #F5F7F5;
        }
        &::-webkit-scrollbar-thumb:hover {
          background-color: #848484;
          cursor: pointer;
        }
        .row {
          padding:15px 2px;
        }
        .row:first-of-type {
          border-bottom:1px solid #D7DDD4;
        }
        // .row:last-of-type {
        //   text-align:center;
        // }
        // .filter-inputs.donation {
        //   display:none;
        // }
        // .filter-inputs.finance {
        //   display:none;
        // }
        .filter-input {
          &[data-on='false'] {
            display:none;
          }
          .toggle {
            position:relative;
            display: inline-block;
            font:14px firasans_l;
            color:#5D675B;
            text-align:left;
            width: 100%;
            padding-right: 16px;
          }
          .sublabel {
            font:12px firasans_r;
            color:#5D675B;
            margin:15px 0 8px;
          }
          .toggle i {
            background:transparent url("<%= asset_path('explore/expand.svg') %>") no-repeat center;
            float:right;
            width:16px;
            height:16px;
            cursor:pointer;
            position:absolute;
            top:0px;
            right:0px;
          }
          &.expanded {
            .toggle i{
              background:transparent url("<%= asset_path('explore/collapse.svg') %>") no-repeat center;
            }
            .input-group {
              display: inline-block;
            }
          }

          .list {
            &.hidden {
              display:none;
            }
            li, span {
              display:inline-block;
              width:100%;
              font:14px firasans_book;
              color:#F78E69;
              padding:4px 14px 4px 0;
              position:relative;
              text-align:left;
              &:first-of-type { margin:12px 0 0; }
              i {
                display: inline-block;
                width: 10px;
                height: 10px;
                background: transparent url("<%= asset_path('explore/close_s.svg') %>") no-repeat right top;
                cursor:pointer;
              }
            }
          }
          .input-group {
            display:none;
            margin:8px 0 0;
            width: 100%;
            input {
              font:12px firasans_r;
              color:#5D675B;
              background-color:#F5F7F5;
              padding:6px 10px;
              width:100%;
              border:1px solid #F78E69;
              outline:none;
              &:focus, &:hover {
                background-color:#fff;
              }
              &.datepicker {
                max-width:100px;
              }
              &[type='checkbox'] {
                width:auto;
              }
              &[type='checkbox'] {
                border:1px solid #F78E69;
                border-radius:0;
              }
            }
            ul {
              margin-bottom:8px;
              li {
                padding:2px 0px;
                a {
                  font:14px firasans_book;
                  color:#F78E69;
                }
              }
            }
            .block {
              display:inline-block;
              &.b1 {
                margin-bottom:10px;
              }
            }
          }

          .input-radio-group {
            text-align:center;
            input[type="radio"] + label {
              font:12px firasans_r;
              color:#5D675B;
              display:inline-block;
              margin-right:0px;
              padding:0 10px;
            }
            input[type="radio"]:checked + label {
              font:12px firasans_b;
            }
            .or {
              font:14px firasans_book;
              color:#F78E69;
            }
          }
          .input-checkbox-group {
            margin-top:12px;
            ul {
              text-align: left;
              li {
                display:block;
                padding:4px 0;
              }
            }
          }
        }
        ul.dropdown.loading:before {
          content: "";
          display: inline-block;
          width: 100%;
          height: 100%;
          background: transparent url("<%= asset_path('loading.svg') %>") no-repeat center/100px;
        }
      }
      // &.active[data-type='donation'] {
      //   .pane { display:inline-block; }
      //   .donation { display:initial; }
      //   .finance { display:none; }
      // }
      // &.active[data-type='finance'] {
      //   .pane { display:inline-block; }
      //   .donation { display:none; }
      //   .finance { display:initial; }
      // }
      i.filter-icon {
        display: inline-block;
        background:transparent url("<%= asset_path('explore/filter.svg') %>") no-repeat center;
        vertical-align: middle;
        width:20px;
        height:15px;
        margin-right:12px;
      }
      .autocomplete {
        position:relative;
        input {
          height:32px;
          &:hover, &:focus {
            background-color:#fff;
          }
        }
        button {
          position:absolute;
          right:1px;
          top: 1px;
          border: 0;
          border-left: 1px solid #F78E69;
          width: 30px;
          height: 30px;
          background: #F5F7F5 url("<%= asset_path('explore/bin.svg') %>") no-repeat center/19px;
        }
        button:hover, button:focus, button:active {
          background-color:#fff;
        }
        .dropdown {
          display:none;
          position:absolute;
          z-index:66;
          top:101%;
          left:0;
          bottom:-500%;
          background-color:#fff;
          border: 1px solid #F78E69;
          border-top:0;
          max-height:700%;
          overflow-y:auto;
          width:100%;

          > li {
            .item, .item-disabled { padding:8px 10px; }
            li {
              .item { padding:8px 2px; }
            }
          }
          li {
            font:14px firasans_book;
            color:#F78E69;
            cursor:pointer;
            .item, .item-disabled {
              position:relative;
              text-align:left;
              width:100%;
              // &:hover {
              //   background-color: #F5F7F5;
              // }

            }
            &.l1 .item, &.l1 .item-disabled { padding-left:23px; }
            &.l2 .item { padding-left:26px; }
            &.l3 .item { padding-left:29px; }
            &.l4 .item { padding-left:32px; }
            &.l5 .item { padding-left:35px; }
            & .tree-toggle { z-index: 1;}
            &.l1 .tree-toggle { padding-left:3px; }
            &.l2 .tree-toggle { padding-left:9px; }
            &.l3 .tree-toggle { padding-left:15px; }
            &.l4 .tree-toggle { padding-left:21px; }
            &.l5 .tree-toggle { padding-left:27px; }
            ul { display:none; }
            // outline:none;
            &.collapse {
              > .tree-toggle {
                position:relative;
                display: inline-block;
                padding-right: 16px;
                background:transparent url("<%= asset_path('explore/expand.svg') %>") no-repeat center;
                width:16px;
                height:32px;
                cursor:pointer;
                float:left;
              }
            }
            &.expanded {
              > .tree-toggle {
                background:transparent url("<%= asset_path('explore/collapse.svg') %>") no-repeat center;
              }
              > ul { display: inline-block; }
            }


            // &.expanded {
            //   .toggle i{
            //     background:transparent url("<%= asset_path('explore/collapse.svg') %>") no-repeat center;
            //   }
            //   .input-group {
            //     display: inline-block;
            //   }
            // }
          }
          li > .item:before {
            display:block;
            content:"";
            position:absolute;
            height:100%;
            width:2px;
            top:0;
            left:1px;
            background-color: #AEB3AD;
          }
          li > .item:hover:before {
            background-color: #F78E69;
          }
          li > .item.selected:before, li > .item.focus:before {
            background-color: #F78E69;
          }
          &::-webkit-scrollbar-track {
            background-color: #F5F7F5;
          }
          &::-webkit-scrollbar {
            height: 8px;
            width:8px;
          }
          &::-webkit-scrollbar-thumb {
            background-color:#848484;
            border: 2px solid #F5F7F5;
          }
          &::-webkit-scrollbar-thumb:hover {
            background-color: #848484;
            cursor: pointer;
          }
        }
        &.active {
          input {
            background-color:#fff !important;
          }
          .dropdown {
            display:initial;

          }
        }
      }
    }
    .result {
      position: relative;
      width: 100%;
      .info {
        // border-bottom: dashed 1px #56675b;
        // margin: 0 0 42px;
        // padding: 0 20px;
        // padding-bottom: 36px;
        // display: inline-block;
        // background-color:#F5F7F5;
        // width:100%;
        max-width: 1024px;
        padding:28px 0 28px;
        // margin:0px auto;

        .caption {
          margin-bottom: 14px;
          div {
            display: inline-block;

            font:20px firasans_b;
            color:#2F332F;
            &:after {
              content: "";
              display: block;
              width: 110%;
              padding:0 0 16px 0;
              border-bottom: 1px solid #F78E69;
            }
          }
        }

        .leader {
          font: 16px firasans_l;
          color: #3a3f39;
          // line-height: 1.4;
          label{
            font: 16px firasans_r;
            color:#F78E69;
          }
        }
        .range {
          font:16px firasans_sb;
          color:#2F332F;
        }
        .description {
          font:16px firasans_book;
          color: #3a3f39;
          padding: 27px 0 0;
          /*      .media-item-description-container{
                  overflow: hidden;
                  transition: all 0.3s;
                  margin-bottom: 10px;
                  &.read-less{
                    height: 60px !important;
                  }
                }
          */
          p{
            line-height: 1.4;
            margin-bottom: 10px;
          }
        }

        .row {
          display: flex;
          flex-direction: row;
        }
        .column {
          display: flex;
          flex-direction: column;
          &:first-of-type {
            flex: 1;
          }
        }
      }
      .stats {
        display: inline-block;
        text-align: center;
        max-width: 1024px;
        .stats-caption {
          color: #F78E69;
          font: 20px firasans_b;
          margin-bottom: 10px;
        }
        .stats-box {
          display: flex;
          flex-direction: row;
          border: 1px solid #C1B02F;
          .stat-box {
            padding:8px 20px;
            background-color:#F5F7F5;
            flex: 1;
            label {
              display:block;
              font:14px firasans_r;
              margin-bottom:8px;
              color:#C1B02F;
              white-space: nowrap;
            }
            span {
              display:block;
              font:16px firasans_b;
              color:#5D675B;
              text-align: center;
            }
            &:not(:last-of-type) {
              border-right: 1px solid #C1B02F;
            }
          }

        }
      }
      .chart-container {
        display:block;
        width:100%;

        min-width:300px;
        padding:12px 0 22px;
        .actions {
          text-align:center;
          padding:0 0 2px;
          > div
          {
            display:inline-block;
            position:relative;
            width:36px;
            height:28px;
            > i {
              display:block;
              width:24px;
              height:21px;
              position:absolute;
              top:50%;
              left:50%;
              transform:translate(-50%, -50%);
              background:transparent url("<%= asset_path('explore/actions.svg') %>") no-repeat top left;
              &:hover, &:focus, &:active {
                cursor:pointer;
              }
              margin:0px auto;
            }
          }
          .share
          {
            i { background-position: 0px 0px; }
            &:hover { background-position: 0px -22px; }
          }
          .embed
          {
            i { background-position: -25px 0px; }
            &:hover i { background-position: -25px -22px; }
          }
          .download{
            i { background-position: -49px 0px; }
            &:hover i { background-position: -49px -22px; }
          }
        }
        .actions .download_menu {
          position:relative;
          z-index:14;
          ul {
            display:none;
          }
          &:hover {
            background-color:#fff;
            border:1px dashed #aeb3ad;
            ul {
              display:block;
              position:absolute;
              top:100%;
              right:0;
              background-color:#fff;
              border:1px dashed #aeb3ad;
              li a {
                white-space:nowrap;
                display:block;
                font: 14px firasans_l;
                color: #5D675B;
                padding:6px 10px;
                text-align:left;
                &:hover {
                  background-color: #F5F5F5;
                }
              }
            }
          }
        }
      }
      .result-container {
        max-width: 1024px;
        > div:nth-of-type(1) {
          // border-bottom: 1px dashed #F78E69;
          // margin-bottom: 28px;
        }
      }
    }

  }
  & .result .pane[data-type='donation'] ,
  & .result .pane[data-type='finance'],
  & .filter [data-belong-to='donation'],
  & .filter [data-belong-to='finance'] {
    display:none;
  }
  &[data-type='donation'] .result .pane[data-type='donation'],
  &[data-type='finance'] .result .pane[data-type='finance'],
  &[data-type='donation'] .filter [data-belong-to='donation'],
  &[data-type='finance'] .filter [data-belong-to='finance'] {
    display:block;
    width:100%;
  }
  & .result .panes.not-found .pane[data-type='donation'] ,
  & .result .panes.not-found .pane[data-type='finance'] {
    display:none;
  }
  & .result .pane { text-align: center; }
}
.view-loader {
  position:absolute;
  top:0;
  right:0;
  bottom:0;
  left:0;
  z-index:99;
  background-color:rgba(84, 84, 84, 0.58);
  > div {
    display:none;
    position: absolute;
  }
  .circle {
    content:"";
    background:transparent url("<%= asset_path('loading.svg') %>") no-repeat center/200px;
    left: 50%;
    transform: translateX(-50%);
    width: 200px;
    height: 200px;
  }
  &[data-type='circle'] .circle, &[data-type='message'] .message { display: inline-block; }
}
