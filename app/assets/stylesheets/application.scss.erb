 .dataTables_filter {
    display:inline-block;
    float:none;
    input {
      border: 1px solid #88D877;
      padding: 6px 10px;
      margin: 0px 0 16px 0;
      &::-webkit-input-placeholder {
        font: 14px firasans_l;
        color: #5D675B;
      }
