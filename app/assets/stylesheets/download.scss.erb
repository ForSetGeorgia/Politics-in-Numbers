.main-container {
  display:flex;
  flex-direction:column;
}
.filter {
  position:relative;
  .filter-toggle {
    font:14px firasans_r;
    color:#88D877;
    white-space: nowrap;
    padding:15px 24px 12px 24px;
    border-bottom:1px solid #D7DDD4;
    cursor:pointer;
    i {
      display: inline-block;
      background:transparent url("<%= asset_path('explore/filter.svg') %>") no-repeat center;
      vertical-align: middle;
      width:20px;
      height:15px;
      margin-right:12px;
    }
  }
  .pane {
    display:none;
    background-color:#F5F7F5;
    position:absolute;
    top: 0px;
    width:200px;
    min-width:200px;
    z-index:55;
    padding:0 0 12px;
    overflow-y:auto;
    &::-webkit-scrollbar-track {
      background-color: #F5F7F5;
    }
    &::-webkit-scrollbar {
      height: 8px;
      width:8px;
    }
    &::-webkit-scrollbar-thumb {
      background-color:#848484;
      border: 2px solid #F5F7F5;
    }
    &::-webkit-scrollbar-thumb:hover {
      background-color: #848484;
      cursor: pointer;
    }

    .row {
      padding:15px 2px;
    }
    .row:not(:last-of-type) {
      border-bottom:1px solid #D7DDD4;
    }

    .filter-input {
      &[data-on='false'] {
        display:none;
      }
      .toggle {
        position:relative;
        display: inline-block;
        font:14px firasans_l;
        color:#5D675B;
        text-align:left;
        width: 100%;
        padding-right: 16px;
      }
      .sublabel {
        font:12px firasans_r;
        color:#5D675B;
        margin:15px 0 8px;
      }
      .toggle i {
        background:transparent url("<%= asset_path('explore/expand.svg') %>") no-repeat center;
        float:right;
        width:16px;
        height:16px;
        cursor:pointer;
        position:absolute;
        top:0px;
        right:0px;
      }
      &.expanded {
        .toggle i{
          background:transparent url("<%= asset_path('explore/collapse.svg') %>") no-repeat center;
        }
        .input-group {
          display: inline-block;
        }
      }

      .list {
        &.hidden {
          display:none;
        }
        li, span {
          display:inline-block;
          width:100%;
          font:14px firasans_book;
          color:#F78E69;
          padding:4px 14px 4px 0;
          position:relative;
          text-align:left;
          &:first-of-type { margin:12px 0 0; }
          i {
            display: inline-block;
            width: 10px;
            height: 10px;
            background: transparent url("<%= asset_path('explore/close_s.svg') %>") no-repeat right top;
            cursor:pointer;
          }
        }
      }
      .input-group {
        display:none;
        margin:8px 0 0;
        width: 100%;
        input {
          font:12px firasans_r;
          color:#5D675B;
          background-color:#F5F7F5;
          padding:6px 10px;
          width:100%;
          border:1px solid #F78E69;
          outline:none;
          &:focus, &:hover {
            background-color:#fff;
          }
          &.datepicker {
            max-width:100px;
          }
          &[type='checkbox'] {
            width:auto;
          }
          &[type='checkbox'] {
            border:1px solid #F78E69;
            border-radius:0;
          }
        }
        ul {
          margin-bottom:8px;
          li {
            padding:2px 0px;
            a {
              font:14px firasans_book;
              color:#F78E69;
            }
          }
        }
        .block {
          display:inline-block;
          &.b1 {
            margin-bottom:10px;
          }
        }
      }

      .input-radio-group {
        text-align:center;
        input[type="radio"] + label {
          font:12px firasans_r;
          color:#5D675B;
          display:inline-block;
          margin-right:0px;
          padding:0 10px;
        }
        input[type="radio"]:checked + label {
          font:12px firasans_b;
        }
        .or {
          font:14px firasans_book;
          color:#F78E69;
        }
      }
      .input-checkbox-group {
        margin-top:12px;
        ul {
          text-align: left;
          li {
            display:block;
            padding:4px 0;
          }
        }
      }
    }



    .autocomplete {
      position:relative;
      input {
        height:32px;
        &:hover, &:focus {
          background-color:#fff;
        }
      }
      button {
        position:absolute;
        right:1px;
        top: 1px;
        border: 0;
        border-left: 1px solid #F78E69;
        width: 30px;
        height: 30px;
        background: #F5F7F5 url("<%= asset_path('explore/bin.svg') %>") no-repeat center/19px;
      }
      button:hover, button:focus, button:active {
        background-color:#fff;
      }
      .dropdown {
        display:none;
        position:absolute;
        z-index:66;
        top:100%;
        left:0;
        bottom:-500%;
        background-color:#fff;
        border: 1px solid #F78E69;
        border-top:0;
        max-height:700%;
        overflow-y:auto;
        width:100%;

        > li {
          .item { padding:8px 10px; }
          li {
            .item { padding:8px 2px; }
          }
        }
        li {
          font:14px firasans_book;
          color:#F78E69;
          cursor:pointer;
          .item {
            position:relative;
            text-align:left;
            width:100%;
            // &:hover {
            //   background-color: #F5F7F5;
            // }

          }
          &.l1 .item { padding-left:23px; }
          &.l2 .item { padding-left:26px; }
          &.l3 .item { padding-left:29px; }
          &.l4 .item { padding-left:32px; }
          &.l5 .item { padding-left:35px; }
          & .tree-toggle { z-index: 1;}
          &.l1 .tree-toggle { padding-left:3px; }
          &.l2 .tree-toggle { padding-left:9px; }
          &.l3 .tree-toggle { padding-left:15px; }
          &.l4 .tree-toggle { padding-left:21px; }
          &.l5 .tree-toggle { padding-left:27px; }
          ul { display:none; }
          // outline:none;
          &.collapse {
            > .tree-toggle {
              position:relative;
              display: inline-block;
              padding-right: 16px;
              background:transparent url("<%= asset_path('explore/expand.svg') %>") no-repeat center;
              width:16px;
              height:32px;
              cursor:pointer;
              float:left;
            }
          }
          &.expanded {
            > .tree-toggle {
              background:transparent url("<%= asset_path('explore/collapse.svg') %>") no-repeat center;
            }
            > ul { display: inline-block; }
          }


          // &.expanded {
          //   .toggle i{
          //     background:transparent url("<%= asset_path('explore/collapse.svg') %>") no-repeat center;
          //   }
          //   .input-group {
          //     display: inline-block;
          //   }
          // }
        }
        li > .item:before {
          display:block;
          content:"";
          position:absolute;
          height:100%;
          width:2px;
          top:0;
          left:1px;
          background-color: #AEB3AD;
        }
        li > .item:hover:before {
          background-color: #F78E69;
        }
        li > .item.selected:before, li > .item.focus:before {
          background-color: #F78E69;
        }
        &::-webkit-scrollbar-track {
          background-color: #F5F7F5;
        }
        &::-webkit-scrollbar {
          height: 8px;
          width:8px;
        }
        &::-webkit-scrollbar-thumb {
          background-color:#848484;
          border: 2px solid #F5F7F5;
        }
        &::-webkit-scrollbar-thumb:hover {
          background-color: #848484;
          cursor: pointer;
        }
      }
      &.active {
        input {
          background-color:#fff !important;
        }
        .dropdown {
          display:initial;

        }
      }
    }
  }
  &.active .pane {
    display:block;
  }
  .filter-header {
    display:block;
    padding:15px 14px 12px;
    border-bottom:1px solid #D7DDD4;
    label {
      display:inline-block;
      font:14px firasans_r;
      color:#88D877;
      padding:0 10px;
      i {
        display: inline-block;
        background:transparent url("<%= asset_path('explore/filter.svg') %>") no-repeat center;
        vertical-align: middle;
        width:20px;
        height:15px;
        margin-right:12px;
      }
    }
    .close {
      float: right;
      vertical-align: middle;
      background:transparent url("<%= asset_path('explore/close.svg') %>") no-repeat center;
      width:20px;
      height:20px;
      position: relative;
      top: -3px;
      cursor:pointer;
    }
  }
  .filter-type-toggles {
    display:flex;
    flex-direction:row;
    padding:12px 12px 0;
    .filter-type-toggle {
      flex:1;
      font: 14px firasans_sb;
      text-align:left;
      text-overflow: ellipsis;
      background-color:transparent;
      padding:4px;
      transition-duration: 0.3s;
      transition-property: color, background-color;
      vertical-align:top;
      width:50%;
      overflow:hidden;
      &:hover {
        cursor:pointer;
      }
      &[data-type='donation'] {
        border:1px solid #DDCD37;
        border-right:0;
        color:#DDCD37;
        &:hover{
          background-color: #DDCD37;
          color:#3E443D;
        }
      }
      &[data-type='finance'] {
        border:1px solid #F78E69;
        border-left:0;
        color:#F78E69;
        &:hover {
          background-color: #F78E69;
          color:#fff;
        }
      }
    }
  }
  .filter-inputs {
    display:none;
    padding:0 14px 0;
  }
  .filter-footer {
    padding:12px 14px 0;
    button {
      opacity:0.9;
      &:hover {
        opacity:1;
      }
    }
    .filter-reset {
      display:block;
      font:14px firasans_b;
      color:#5D675B;
      background-color:#fff;
      border:1px solid #C5CEC2;
      padding:8px 18px;
      margin: 0px auto;
    }
    .filter-submit {
      display:block;
      font:14px firasans_b;
      color:#fff;
      background-color:#F78E69;
      padding:8px 18px;
      border:0;
      margin:12px auto 0;
      i {
        display:inline-block;
        background:transparent url("<%= asset_path('explore/compare.svg') %>") no-repeat center;
        width:20px;
        height:20px;
        vertical-align: middle;
        margin-right: 10px;
      }
    }
  }
  &[data-type="donation"] {
    .filter-type-toggle[data-type='donation'] {
      background-color: #DDCD37;
      color:#3E443D;
    }
    .filter-inputs[data-type='donation'] {
      display:block;
    }
  }
  &[data-type="finance"] {
    .filter-type-toggle[data-type='finance'] {
      background-color: #F78E69;
      color:#fff;
    }
    .filter-inputs[data-type='finance'] {
      display:block;
    }
  }
}
.view {
  width:100%;
  position:relative;
  .view-loader {
    position:absolute;
    top:0;
    right:0;
    bottom:0;
    left:0;
    z-index:15;
    &:before {
      display:inline-block;
      content:"";
      background:rgba(136,216,119,0.2) url(/assets/loading.svg) no-repeat center/200px;
      position: absolute;
      top: 0;
      width: 100%;
      height: 100%;
    }
  }
  .not-found-text {
    font:18px firasans_r;
    color: rgb(93, 103, 91);
  }
  .download-button, .download-size {
    display:inline-block;
  }
  .download-button button{
    display:inline-block;
    font: 14px firasans_sb;
    color:#F78E69;
    background-color:transparent;
    border:1px solid #F78E69;
    padding:5px 12px;
    transition-duration: 0.3s;
    transition-property: color, background-color;
    &:hover {
      cursor:pointer;
      background-color: #F78E69;
      color:#fff;
    }
  }
  .download-size {
    font: 14px firasans_r;
    color: rgb(93, 103, 91);
    margin-left:10px;
    span {
      display:inline-block;
    }
  }
  .DataTables_Table_0_right {
    display:inline-block;
    float:right;
    .dataTables_filter {
      margin-right:20px;
    }
  }
  table {
    width:100%;
    border-bottom:1px solid #DEE2DC !important;
    input[type="checkbox"] + label span {
      margin-right:0;
    }
    thead {
      // border:1px solid #DEE2DC;
      th {
        font:16px firasans_r;
        color:#5D675B;
        background-color:#F3F9F2;
        padding:15px 13px;
        border:1px solid #DEE2DC;
        border-left:0;
        border-bottom:0;
        text-align:left;
        &:first-of-type {
          border-left:1px solid #DEE2DC;
        }
        &.empty {
          background-color:#fff;
          border:0;
        }
        &.outer {
          background-color:#fff;
        }
      }
    }
    tbody {
      tr {
        td {
          font:14px firasans_l;
          color:#5D675B;
          padding:15px 13px;
          vertical-align:top;
          background-color:#fff;
          border:1px solid #DEE2DC;
          border-bottom:0;
          border-left:0;
          // &:first-of-type {
          //   font:16px firasans_r;
          //   color:#5D675B;
          //   text-align:left;
          //   border-left:1px solid #DEE2DC;
          //   border-right:2px solid #DEE2DC;
          //   background-color:#F3F9F2;
          // }
          &:first-of-type {
            border-left:1px solid #DEE2DC;
          }
        }

      }
    }
  }
}

