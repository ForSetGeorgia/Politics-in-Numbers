/*
  *= require components/highlight_grid
*/
body.root.index{
  main{
    background-color: #367652;
    padding-bottom: 0;
  }
  .home-summary{
    background: url("<%= asset_path('home.png') %>") no-repeat bottom center;
    background-size: cover;
    height: 600px;
    // margin: -100px -42px 0 -42px;
    position: relative;

    .home-summary-text{
      text-align: center;
      margin: 0 20%;
      padding-top: 160px;
      font:18px/28px firasans_book;
      color: #fff;
      font-weight: bold;
      p{
        margin-bottom: 10px;
        &:last-of-type{
          margin-bottom: 0;
        }
      }
    }

    .home-filters{
      text-align:center;
      margin-top: 60px;
    }

    .home-explore{
      width: 275px;
      border:1px dashed #a9afa8;
      margin: 0 auto;
      a{
        padding: 20px;
        color: #fff;
        text-transform: uppercase;
        display: block;
        &:hover{
          background-color: #367652;
        }
      }
    }

    .home-highlights {
      display: block;
      position: absolute;
      bottom: 0;
      width: 100%;
      display: flex;
      flex-direction: row;
      .home-highlight-before-mask,
      .home-highlight-after-mask {
        background-color: #367652;
        flex: 1;
      }
      .home-highlight-mask {
        width: 231px;
        // width: 100%;
        height: 81px;
        background:transparent url("<%= asset_path('highlight_mask.svg') %>") no-repeat 50% 0%;
        span {
          display: block;
          text-align: center;
          width: 100%;
          padding: 10px 0 7px;
          font: 20px firasans_r;
          color: #ffffff;
        }
        i {
          display: block;
          display: block;
          text-align: center;
          width: 100%;
          height: 21px;
          background:transparent url("<%= asset_path('highlight.svg') %>") no-repeat center;
          background-size: 24px 21px;
        }
      }
    }

    .filter-type{
      background-color: transparent;
      padding-left: 0;
      display: inline-block;
      padding-bottom: 0;
      /*width: auto;*/

      .filters-left{
        float: left;
        width: 50%;
        text-align:right;
      }
      .filters-right{
        float: right;
        width: 50%;
        border-left:1px dashed #a9afa8;
      }

      .filter-summary, .filter-summary-small-screen{
        display:none;
        font:26px firasans_book;
        color: #fff;
        vertical-align: middle;
        font-weight: bold;
        &:lang(ka){
          font-size: 21px;
        }
      }
      .filter-summary{
        display:none;
        text-align: right;
        padding-right:10px;
      }
      .filter-summary-small-screen{
        display: block;
        text-align: center;
        font-size: 20px;
        margin-bottom: 20px;
      }

      .donation, &.in-depth[data-type="finance"] .donation{
        display: inline-block;
      }

      .donation{
        text-align: right;
        width: auto;
      }
      .finance{
        width:auto;
        .finance-toggle {
          background-color: #F78E69;
          color:#fff;
        }
      }

      #finance_category {
        li {
          .finance-category-toggle {
            background-color: #fff;
            opacity: 1;
            a.label {
              color:#000;
            }
          }
        }
      }
    }
  }
  .highlight-grid {
    margin: 80px auto 0;
  }
  .highlights-all {
    display: block;
    margin: 50px 0 80px;
    font: 22px firasans_l;
    color: #ffffff;
    text-align: center;
  }
}

@media (min-width: 992px) {
  body.root.index{
    .home-summary .filter-type {
      .filter-summary-small-screen{
        display:none;
      }
      .filter-summary{
        display:inline-block;
      }
    }
  }
}


