main{
  background-color: #367652;
  padding-bottom: 0;
}
.home-summary{
  background: url("<%= asset_path('home.png') %>") no-repeat bottom center;
  background-size: cover;
  position: relative;
  padding: 0 10px;

  .home-summary-text{
    font:18px/28px firasans_book;
    color: #fff;
    max-width: 992px;
    margin: 0 auto;
    padding: 60px 10px 0;
    p{
      margin-bottom: 10px;
      &:last-of-type{
        margin-bottom: 0;
      }
    }
  }
  .home-launcher {
    text-align: center;
    margin-top: 40px;
    .launcher-summary {
      display: block;
      font:26px firasans_book;
      color: #fff;
      text-align: center;
      margin: 0 0 20px;
      &:lang(ka){
        font-size: 21px;
      }
    }
    .launcher-group {
      display: inline-block;
      .launcher-buttons {
        display: flex;
        flex-direction: row;
      }
      a {
        font: 16px firasans_sb;
        display: inline-block;
        height: 56px;
        white-space: nowrap;
        padding: 0 11px;
        margin: 8px 0;
        // min-width: 100px;
        vertical-align: middle;
        &:lang(ka) {
          font: 15px firasans_sb;
        }
        &.donation {
          // flex: 1;
          background-color: #DDCD37;
          color: #3E443D;
          padding-top: 18px;
          width: 140px;
          &:lang(ka) {
            width: 180px;
          }
        }
        &.finance {
          // flex: 1;
          background-color: #F78E69;
          color:#fff;
          padding-top: 18px;
          width: 140px;
          &:lang(ka) {
            width: 170px;
          }
        }
        &.explore {
          display: block;
          border:1px dashed #a9afa8;
          margin: 0 auto;
          padding: 20px;
          color: #fff;
          text-transform: uppercase;
          display: block;
          &:hover{
            background-color: #367652;
          }
        }
      }
      .separator {
        display: block;
        margin: 0px 26px;
        border-right: 1px dashed #a9afa8;
      }
    }
    .launcher-list {
      display: none;
      li {
        margin: 0 8px 8px;
        a {
          font: 12px firasans_sb;
          color:#000;
          background-color: #fff;
          // color: #5D675B;
          text-decoration: none;
          display: inline-block;
          padding: 11px 9px;
          vertical-align: middle;
          // margin-bottom: 5px;
          white-space: nowrap;
          &:hover {
            background-color: rgba(136,216,119,.8);
            color: #fff;
          }
        }
      }
    }
  }
  .home-highlights {
    display: block;
    // position: absolute;
    // bottom: 0;
    width: 100%;
    display: flex;
    flex-direction: row;
    margin-top: 60px;
    .home-highlight-before-mask,
    .home-highlight-after-mask {
      background-color: #367652;
      flex: 1;
    }
    .home-highlight-mask {
      width: 231px;
      // width: 100%;
      height: 81px;
      background:transparent url("<%= asset_path('highlight_mask.svg') %>") no-repeat 50% 0%;
      span {
        display: block;
        text-align: center;
        width: 100%;
        padding: 10px 0 7px;
        font: 20px firasans_r;
        color: #ffffff;
      }
      i {
        display: block;
        display: block;
        text-align: center;
        width: 100%;
        height: 21px;
        background:transparent url("<%= asset_path('highlight.svg') %>") no-repeat center;
        background-size: 24px 21px;
      }
    }
  }
}
.highlight-grid {
  margin: 80px auto 0;
}
.highlights-all {
  display: block;
  margin: 50px 0 80px;
  font: 22px firasans_l;
  color: #ffffff;
  text-align: center;
  opacity: .8;
  &:hover, &:focus, &:active, &:visited {
    opacity: 1;
    color: #ffffff;
  }
}
@media (min-width: 992px) {
  .home-summary {
    padding: 0;
    .home-summary-text {
      padding-top: 160px;
    }
    .home-launcher {
      display: flex;
      flex-direction: row;
      .launcher-summary {
        flex: 2;
        margin: 0;
        // display: block;
      }
      .launcher-group {
        // flex: 1;
        // display: block;
        .launcher-buttons {
          display: flex;
          flex-direction: row;
        }
        a {
          &.donation {
            // flex: 1;
          }
          &.finance {
            // flex: 1;
          }
          &.explore {}
        }
      }
      .launcher-list {
        flex: 2;
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        align-content: flex-start;
        margin-top: 18px;
        a {}
      }
    }
  }
}

