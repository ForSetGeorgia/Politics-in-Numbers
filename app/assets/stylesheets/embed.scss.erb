html, body {
  height:100%;
  width:100%;
}
.pins {
  position:fixed;
  bottom:0;
  left:0;
  padding:6px 10px;
  background-color: #88d877;
  color:#fff;
  text-decoration:none;
  cursor:pointer;
}
.container {
  position:relative;
  overflow:hidden;
  overflow-y:auto;
  width:100%;
  height:100%;
  // border:1px solid #88d877;
  &.loader:before {
    display:inline-block;
    content:"";
    background:rgba(136,216,119,0.2) url(/assets/loading.svg) no-repeat center/200px;
    position: absolute;
    top: 0;
    left:0;
    bottom:0;
    right:0;
    z-index: 1;
  }
  &.not-found
  {
    background-color: #88d877;
    border:1px solid #88d877;
    span {
      display:inline-block;
      font:18px Tahoma;
      color: #fff;
      font-weight:bold;
      text-align:center;
      position:absolute;
      top:50%;
      left:50%;
      transform:translate(-50%, -50%);
    }
  }

  .dataTables_wrapper {
    width:100%;
    height:100%;
    table {
      width:100%;
      border:1px solid #e2e6e0;
      border-left:0;
      border-right:0;
      &.highlighted .alt {
        background-color: rgba(136, 216, 119,0.3);
      }
      thead {
        border:0 !important;
        background-color:#f3f9f2;
        // e2e6e0
        //
        th {
          font:16px firasans_r;
          color:#5D675B;
          text-align:left;
          padding:15px 13px;
          border:0px;
          border-bottom:1px solid #C5CEC2;
          &:not(:last-of-type) {
            border-right:1px solid #e2e6e0;
          }
        }
      }
      tbody {
        tr {
          border:1px solid #e2e6e0;
          border-top:0;
          td {
            font:14px firasans_l;
            color:#5D675B;
            text-align:left;
            padding:15px 13px;
            vertical-align:top;
            border-bottom:1px solid #e2e6e0;
            &:not(:last-of-type) {
              border-right:1px solid #e2e6e0;
            }
            &.right { text-align: right; }
            &.center { text-align: center; }

          }
          &:last-of-type td {
            border-bottom:0;
          }
        }
      }
    }

     .dataTables_paginate {
        text-align:right;
        padding: 14px 10px 10px;
        margin:0;
       .pagination {
         li {
           display:inline-block;
           padding:0 3px;
           a {
            cursor:pointer;
            text-decoration:none;
           }
         }
       }
       .paginate_current a{
         font:16px firasans_b;
         color:#88d877;
       }
       .paginate_button.disabled {
         opacity:.5;
         a {
          cursor:not-allowed;
         }
       }

       .paginate_text {
         font:16px firasans_r;
         color:#5d675b;
       }
       .paginate_count {
         font:14px firasans_r;
       }
     }
    .dataTables_filter {
       display:inline-block;
       float:none;
       padding: 12px 10px 10px;
       margin:0;
       input {
         border: 1px solid #88D877;
         padding: 6px 10px;
         &::-webkit-input-placeholder {
           font: 14px firasans_l;
           color: #5D675B;
         }
         &:-moz-placeholder {
           font: 14px firasans_l;
           color: #5D675B;
         }
         &::-moz-placeholder {  /* Firefox 19+ */
           font: 14px firasans_l;
           color: #5D675B;
         }
         &:-ms-input-placeholder {
           font: 14px firasans_l;
           color: #5D675B;
         }
       }
     }
    .dataTables_length {
      display:inline-block;
      float:right;
      text-align:right;
      font: 14px firasans_l;
      color: #5D675B;
      padding: 12px 10px 10px;
      margin:0;
      select {
        border: 1px solid #88D877;
        padding: 6px 10px;
        background:transparent url("<%= asset_path('caret_a.svg') %>") no-repeat right;
        background-origin: content-box;
        background-position-x: 25px;
        background-size: 12px;
        padding-right: 22px;
        -webkit-appearance: none;
        appearance: none;
      }
    }
  }
}
table.dataTable.dtr-inline.collapsed > tbody > tr > td:first-child:before, table.dataTable.dtr-inline.collapsed > tbody > tr > th:first-child:before {
  top:initial;
  border: 0;
  border-radius: 16px;
  line-height: 18px;
  box-shadow: none;
  background-color: #88D877;
}







