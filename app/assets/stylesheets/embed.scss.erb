html, body {
  height:100%;
  width:100%;
}
.pins {
  position:fixed;
  bottom:0;
  left:0;
  padding:6px 10px;
  background-color: #88d877;
  color:#fff;
  text-decoration:none;
  cursor:pointer;
}
.container {
  position:relative;
  overflow:hidden;
  overflow-y:auto;
  width:100%;
  height:100%;
  // border:1px solid #88d877;
  &.loader:before {
    display:inline-block;
    content:"";
    background:rgba(136,216,119,0.2) url("<%= asset_path('loading.svg') %>") no-repeat center/200px;
    position: absolute;
    top: 0;
    left:0;
    bottom:0;
    right:0;
    z-index: 1;
  }
  &.not-found
  {
    background-color: #88d877;
    border:1px solid #88d877;
    span {
      display:inline-block;
      font:18px Tahoma;
      color: #fff;
      font-weight:bold;
      text-align:center;
      position:absolute;
      top:50%;
      left:50%;
      transform:translate(-50%, -50%);
    }
  }
}
